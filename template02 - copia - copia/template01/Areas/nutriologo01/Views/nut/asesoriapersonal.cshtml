        if (mensaje == "") {
            alert("Escriba el mensaje que desea enviarle a su cliente ");
            return false;
        }      
                $.ajax({
            type: 'GET',
            url: "@Url.Action("mandarmsj", "nut")",
                    data: { idcliente: idcliente, mensaje: mensaje},
                    success: function (response) {
                    
                        mostrarchat(idcliente);
            },
            error: function (result) {
                mostrarchat(idcliente);
            }
        });
        return false;
        }
