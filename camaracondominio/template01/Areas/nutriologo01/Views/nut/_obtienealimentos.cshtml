@model IEnumerable<template01.Models.recetasAlimentos11>
@using template01.helpers
@{
    ViewBag.Title = "_obtienelcientes";
}
<link href="~/Scripts/est/calendario/css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
<script src="~/Scripts/est/js/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/est/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Scripts/est/calendario/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>

<script src="~/Scripts/est/calendario/js/locales/bootstrap-datetimepicker.es.js" charset="UTF-8"></script>

<br />
<br />
<div class="col-md-6">
    <table class="table table-striped table-bordered table-hover" id="tab_alimentos">
        <thead>
            <tr role="row">
                <th>#folio</th>
                <th>Alimento </th>
                <th>Porcion</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {

                    string id = "";
                    foreach (var item in Model)
                    {

                        id = "porcion" + item.idRegistro.ToString();
                        <tr>
                            <td>@item.idRegistro</td>
                            <td>@item.descripcion</td>
                            <td>

                                <input type="text" id="@id" class="form-control input-xsmall" placeholder="escriba la porcion ">
                            </td>
                        </tr>
                    }
                }

            }
        </tbody>
    </table>


</div>
<div class="col-md-6">
    <label for="form_control_1">Para que dia quiere asignar esta receta</label>
    <div class="input-group  form_date date col-md-12" data-date="">
        <input class="form-control  date-picker" data-date-format="dd-mm-yyyy" id="fechacomida" size="16" type="text" value="" readonly>
        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>

    </div>

    <input type="text" id="idreceta" value="@ViewBag.idreceta" class="form-control hidden" placeholder="">

    <label for="form_control_1">Tipo de comida</label>

    <select id="cbotipocomida" class="form-control">
        <option></option>
        <option value="1">desayuno</option>
        <option value="2">colacion desayuno</option>
        <option value="3">comida</option>
        <option value="4">colacion comida</option>
        <option value="5">cena</option>
        <option value="6">colacion cena</option>

    </select>
</div>

<div class="form-actions">
    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            
            <button type="button" onclick="terminar()" class="btn blue">Asignar receta </button>
        </div>
    </div>
</div>

