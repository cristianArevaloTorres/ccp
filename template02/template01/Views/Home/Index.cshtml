            $("#proceso").val("1");

        }
        //pregunta como se llama el area o direccion ala que pertenece
        if (proceso == "1") {
            $("#asistenteVirtual").html("");
            $("#asistenteVirtual").html(" <span>Cual es el nombre del Area y/o departamento al que pertenecen los empleados que estan a tu cargo , si son varias areas no te preocupes,vas a poder agregar las que necesites cuando quieras , para esta ocasion solo necesito un area</span>  <input type='text' id='AreaTxt' class='form - control' >");
            console.log("entro al final");
            $("#proceso").val("2");
        }
        //agregar empleados
        if (proceso == "2") {
            var areaIA = $("#AreaTxt").val();
            $("#asistenteVirtual").html("");
            $("#asistenteVirtual").html(" <span>Necesitamos agregar algunos empleados al area:" + areaIA + " , no te preocupes si no agregas todos , vas a poder agregar mas empleados cuando quieras.</span>  <input type='text' id='AreaTxt' class='form - control' >");
            console.log("entro al final");
            $("#proceso").val("3");
        }
        if (proceso == "3") {
            var areaIA = $("#AreaTxt").val();
            $("#asistenteVirtual").html("");
            $("#asistenteVirtual").html(" <span>Necesitamos agregar alguna de las actividades que hacen tus empleados , no importa si no agregas todas las actividades ,vas a poder agregar las actividades que necesites cuando quieras </span>  <input type='text' id='AreaTxt' class='form - control' >");
            console.log("entro al final");
            $("#proceso").val("4");
        }
        if (proceso == "4") {
            var areaIA = $("#AreaTxt").val();
            $("#asistenteVirtual").html("");
            $("#asistenteVirtual").html(" <span>Este es el alimentador de conocimiento , podras agregar lo que necesites.</span>  <input type='text' id='AreaTxt' class='form - control' >");
            console.log("entro al final");
            $("#proceso").val("4");
            $("#menuAlimentador").removeClass("hidden");
        }




    }

</script>


