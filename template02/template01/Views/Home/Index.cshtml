<script>
    function siguiente() {
        var proceso = $("#proceso").val();

        if (proceso == "0") {
            $("#asistenteVirtual").html("");
            $("#asistenteVirtual").html(" <span>La funcion de cada asistente es ir aprendiendo, asi que te hare unas preguntas con el fin de generarte respuestas lo mas esactas posibles </span>");
